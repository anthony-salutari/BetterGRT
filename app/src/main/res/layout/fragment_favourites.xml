<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/favFrag" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1184"
        android:id="@+id/stopID"
        android:textSize="16sp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="16dp"
        android:paddingRight="4dp"
        android:paddingTop="20dp" />

    <TextView
        android:id="@+id/stopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="Pioneer / Doon Villlage"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/stopID"
        android:layout_toEndOf="@+id/stopID"
        android:paddingTop="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteButton"
        android:gravity="right"
        android:background="@drawable/ic_delete"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scheduledText"
        android:text="Scheduled:"
        android:layout_below="@+id/stopID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:35 PM"
        android:id="@+id/nextScheduledTime"
        android:textSize="14sp"
        android:layout_alignTop="@+id/scheduledText"
        android:layout_toRightOf="@+id/scheduledText"
        android:layout_toEndOf="@+id/scheduledText"
        android:paddingRight="8dp"
        android:paddingBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Realtime:"
        android:id="@+id/realtimeText"
        android:textSize="14sp"
        android:layout_alignTop="@+id/nextScheduledTime"
        android:layout_toRightOf="@+id/nextScheduledTime"
        android:layout_toEndOf="@+id/nextScheduledTime"
        android:paddingRight="8dp"
        android:paddingBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:25:39"
        android:id="@+id/actualTime"
        android:textSize="14sp"
        android:layout_alignTop="@+id/realtimeText"
        android:layout_toRightOf="@+id/realtimeText"
        android:layout_toEndOf="@+id/realtimeText"
        android:paddingBottom="20dp" />

</RelativeLayout>
