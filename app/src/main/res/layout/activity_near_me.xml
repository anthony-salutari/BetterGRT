<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/nearMeLayout">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="68dp"
        sothree:umanoShadowHeight="4dp"
        sothree:umanoFadeColor="@android:color/transparent"
        sothree:umanoOverlay="true" >

        <!-- main content -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.asal.bettergrt.NearMe" />
        </FrameLayout>

        <!-- sliding layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ffffff"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="false"
            android:id="@+id/dragView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/stopDetails"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="Stop Details"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp" />

                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/busLocationButton"
                    android:background="@drawable/ic_bus"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp" />

                <ImageButton
                    android:id="@+id/favouriteButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/favorite_button_selector"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"/>

            </LinearLayout>

            <ExpandableListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/stopTimesList">
            </ExpandableListView>

        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</RelativeLayout>
